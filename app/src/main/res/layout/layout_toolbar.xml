<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/toolbar_imv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher" />

    <app.com.chatapp.view.CustomClickTextView
        android:id="@+id/toolbar_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/toolbar_title"
        android:textStyle="bold"
        android:visibility="invisible" />

    <app.com.chatapp.view.CustomClickTextView
        android:id="@+id/toolbar_txt_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textColor="@color/list_time_color"
        android:textSize="@dimen/toolbar_text_btn"
        android:visibility="invisible" />

    <app.com.chatapp.view.CustomClickTextView
        android:id="@+id/toolbar_txt_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textColor="@color/btn_save"
        android:textSize="@dimen/toolbar_text_btn"
        android:visibility="invisible" />

    <app.com.chatapp.view.CustomImageButton
        android:id="@+id/toolbar_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_action_logout"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/edt_border" />
</RelativeLayout>